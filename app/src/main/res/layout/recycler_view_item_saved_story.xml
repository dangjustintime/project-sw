<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/image_view_recycler_view_saved_story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_gradient"/>
    <ImageView
        android:id="@+id/image_view_recycler_view_edit_saved_story_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pencil_icon"
        android:tint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/text_view_recycler_view_saved_story_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/text_view_recycler_view_saved_story_date"/>
    <TextView
        android:id="@+id/text_view_recycler_view_saved_story_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09.28.18"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>