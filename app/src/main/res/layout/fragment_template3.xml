<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".free_templates.Template3Fragment"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="50dp"
    android:background="@color/colorWhite">
    <ImageView
        android:id="@+id/image_view_template3_top_media"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/image_view_template3_add_top_media"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/image_view_template3_top_media"
        app:layout_constraintRight_toRightOf="@id/image_view_template3_top_media"
        app:layout_constraintBottom_toBottomOf="@id/image_view_template3_top_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template3_top_media"
        android:src="@drawable/add_story_icon"/>
    <ImageView
        android:id="@+id/image_view_template3_bottom_media"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/image_view_template3_add_bottom_media"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/image_view_template3_bottom_media"
        app:layout_constraintRight_toRightOf="@id/image_view_template3_bottom_media"
        app:layout_constraintBottom_toBottomOf="@id/image_view_template3_bottom_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template3_bottom_media"
        android:src="@drawable/add_story_icon"/>
    <ImageView
        android:layout_width="280dp"
        android:layout_height="10dp"
        android:src="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/image_view_template3_bottom_media"
        app:layout_constraintStart_toStartOf="@id/image_view_template3_bottom_media"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="270dp"
        android:src="@color/colorWhite"
        app:layout_constraintRight_toLeftOf="@id/image_view_template3_bottom_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template3_bottom_media"
        app:layout_constraintBottom_toBottomOf="@id/image_view_template3_bottom_media"/>
    <ImageView
        android:id="@+id/image_view_template3_remove_top_media"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/x_icon"
        app:layout_constraintEnd_toEndOf="@id/image_view_template3_top_media"/>
    <ImageView
        android:id="@+id/image_view_template3_remove_bottom_media"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/x_icon"
        app:layout_constraintEnd_toEndOf="@id/image_view_template3_bottom_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template3_bottom_media"/>
</android.support.constraint.ConstraintLayout>