<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bronze_border"
    android:padding="10dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/text_view_create_new_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_story"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorDarkGrey"
        android:fontFamily="@font/freight_big_w01_sb_italic"/>
    <EditText
        android:id="@+id/edit_text_enter_a_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_a_name_for_this_story"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_view_create_new_story"
        android:textColor="@color/colorDarkGrey"
        android:fontFamily="@font/franklingothic_book"
        android:layout_marginBottom="25dp"/>
    <Button
        android:id="@+id/button_cancel_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_below="@id/edit_text_enter_a_name"
        android:background="@drawable/bronze_border"
        android:fontFamily="@font/franklingothic_med"/>
    <Button
        android:id="@+id/button_add_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_below="@id/edit_text_enter_a_name"
        android:layout_alignEnd="@id/edit_text_enter_a_name"
        android:background="@drawable/bronze_border"
        android:fontFamily="@font/franklingothic_med"/>
</RelativeLayout>