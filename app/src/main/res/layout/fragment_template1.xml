<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Template1Fragment"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="50dp">
    <ImageView
        android:id="@+id/image_view_template1_outer_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:background="@color/colorOffWhite"/>
    <ImageView
        android:id="@+id/image_view_template1_inner_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_grey_border"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="40dp" />
    <ImageView
        android:id="@+id/image_view_template1_add_inner_media"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/add_story_icon"/>
    <ImageView
        android:id="@+id/image_view_template1_add_outer_media"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/image_view_template1_inner_media"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/add_story_icon"/>
    <ImageView
        android:id="@+id/image_view_template1_remove_inner_media"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x_icon"
        app:layout_constraintEnd_toEndOf="@id/image_view_template1_inner_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template1_inner_media" />
    <ImageView
        android:id="@+id/image_view_template1_remove_outer_media"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x_icon"
        app:layout_constraintEnd_toEndOf="@id/image_view_template1_outer_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template1_outer_media" />
</android.support.constraint.ConstraintLayout>