<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout_template1"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="1920px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".free_templates.Template1Fragment">
    <ImageView
        android:id="@+id/image_view_template1_outer_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorOffWhite"/>
    <ImageView
        android:id="@+id/image_view_template1_inner_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_grey_border"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="40dp" />
    <ImageView
        android:id="@+id/image_view_template1_add_inner_media"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/add_story_icon"/>
    <ImageView
        android:id="@+id/image_view_template1_add_outer_media"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/image_view_template1_inner_media"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/add_story_icon"/>
    <ImageView
        android:id="@+id/image_view_template1_remove_inner_media"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/x_icon"
        android:background="@drawable/bronze_x_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:tint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@id/image_view_template1_inner_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template1_inner_media" />
    <ImageView
        android:id="@+id/image_view_template1_remove_outer_media"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/x_icon"
        android:background="@drawable/bronze_x_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:tint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@id/image_view_template1_outer_media"
        app:layout_constraintTop_toTopOf="@id/image_view_template1_outer_media" />
</android.support.constraint.ConstraintLayout>