<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".activities.StoryEditorActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_story_editor_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="#ffffff">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageView
                android:id="@+id/toolbar_text_view_story_editor_storywell_title"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/storywell_logo"/>
            <ImageView
                android:id="@+id/image_view_story_editor_back_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:src="@drawable/back_icon" />
            <ImageView
                android:id="@+id/image_view_story_editor_download_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:src="@drawable/download_icon"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:id="@+id/frame_layout_fragment_placeholder_story_editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/constraint_layout_icon_container"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_story_editor_activity"/>
    <FrameLayout
        android:id="@+id/frame_layout_fragment_placeholder_save_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout_icon_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorWhite"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <ImageView
            android:id="@+id/image_view_story_editor_aa_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/aa_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/image_view_story_editor_square_circle_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/square_circle_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/image_view_story_editor_aa_icon"
            app:layout_constraintRight_toRightOf="@id/image_view_story_editor_plus_icon"/>
        <ImageView
            android:id="@+id/image_view_story_editor_plus_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/plus_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/image_view_story_editor_three_circle_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/three_circles_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/image_view_story_editor_plus_icon"
            app:layout_constraintRight_toRightOf="@id/image_view_story_editor_angle_brackets_icon"/>
        <ImageView
            android:id="@+id/image_view_story_editor_angle_brackets_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/angle_brackets_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>