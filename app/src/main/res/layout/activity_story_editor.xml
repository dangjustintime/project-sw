    <TextView
        android:id="@+id/text_view_story_editor_page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="@font/franklingothic_book"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/frame_layout_fragment_placeholder_story_editor"
        app:layout_constraintBottom_toTopOf="@id/constraint_layout_icon_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>